  <img src="https://iili.io/F5fnkyx.md.jpg" alt="Cover" class="cover-img">

  <h2>üì© SHADOW JOKER SMS</h2>

  <form id="smsForm">
    <input type="text" id="number" placeholder="Enter Phone Number" required>
    <textarea id="message" placeholder="Enter your message..." required></textarea>
    <button type="submit">üöÄ Send SMS</button>
  </form>

  <p id="result"></p>

  <script>
    const form = document.getElementById('smsForm');
    const result = document.getElementById('result');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const number = document.getElementById('number').value.trim();
      const message = document.getElementById('message').value.trim();

      if (!number || !message) {
        result.innerText = "‚ö†Ô∏è Please fill in all fields.";
        return;
      }

      result.innerText = "‚è≥ Sending...";

      try {
        const res = await fetch(`/api/send?number=${encodeURIComponent(number)}&message=${encodeURIComponent(message)}`);
        const text = await res.text();
        result.innerText = "‚úÖ Response: " + text;
      } catch (err) {
        result.innerText = "‚ùå Error: " + err.message;
      }
    });
  </script>

